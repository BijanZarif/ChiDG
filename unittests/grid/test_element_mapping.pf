!> Test to compute modal representation of coordinates with the element mapping and then
!! to recover the original point representation back from the mapping - linear
@Test
subroutine testElementMapping_reversability_linear() 
    use pfunit_mod
    use mod_element_mapping,    only: compute_element_mappings, elem_map
    use mod_kinds,              only: rk,ik
    use mod_constants,          only: ZERO, ONE, TWO, TENTH
    use mod_polynomial,         only: polynomialVal
    use type_point,             only: point_t
    use type_expansion,         only: expansion_t

    implicit none
    type(expansion_t)   :: coords
    type(point_t)       :: pts_init(8), pts_test(8), pts_ref(8)   !> Linear Element
    real(rk)            :: mat(8,8), tol
    real(rk)            :: x, y, z, x_ref, y_ref, z_ref, pert
    integer(ik)         :: ipt, iterm, inode, i, j, k
    
    tol = 1.e-13_rk
    
    
    call compute_element_mappings()
    
    call coords%init(8,3)   !> 8 terms, 3 coordinates (x,y,z)
    
    ! Compute coordinates of a Hex-element with appropriate number of points
    call random_seed()
    call random_number(pert)
    x = ZERO + TENTH*pert
    x_ref = -ONE
    call random_seed()
    call random_number(pert)
    y = ZERO + TENTH*pert
    y_ref = -ONE
    call random_seed()
    call random_number(pert)
    z = ZERO + TENTH*pert
    z_ref = -ONE
    ipt = 1
    do k = 1,2
        do j = 1,2
            do i = 1,2
                call pts_init(ipt)%set(x,y,z)
                call pts_ref(ipt)%set(x_ref,y_ref,z_ref)
                call random_seed()
                call random_number(pert)
                x     = x + TWO + TENTH*pert
                x_ref = x_ref + (TWO/(TWO-ONE))
                ipt = ipt + 1     
            end do
            call random_seed()
            call random_number(pert)
            x     = ZERO + TENTH*pert
            x_ref = -ONE
            call random_seed()
            call random_number(pert)
            y     = y + TWO + TENTH*pert
            y_ref = y_ref + (TWO/(TWO-ONE))
        end do
        call random_seed()
        call random_number(pert)
        x     = ZERO + TENTH*pert
        x_ref = -ONE
        call random_seed()
        call random_number(pert)
        y     = ZERO + TENTH*pert
        y_ref = -ONE
        call random_seed()
        call random_number(pert)
        z     = z + TWO + TENTH*pert
        z_ref = z_ref + (TWO/(TWO-ONE))
    end do
    
    ! Compute modal coordinates
    coords%mat(:,1) = matmul(elem_map(1)%mat,pts_init(:)%c1_)
    coords%mat(:,2) = matmul(elem_map(1)%mat,pts_init(:)%c2_)
    coords%mat(:,3) = matmul(elem_map(1)%mat,pts_init(:)%c3_)
    
    
    ! Compute matrix of polynomial values for reverse calculation
    do iterm = 1,8
        do inode = 1,8
            mat(inode,iterm) = polynomialVal(3,8,iterm,pts_ref(inode))
        end do
    end do
    
    ! Recompute coordinate point values from modes
    pts_test(:)%c1_ = matmul(mat,coords%mat(:,1))
    pts_test(:)%c2_ = matmul(mat,coords%mat(:,2))
    pts_test(:)%c3_ = matmul(mat,coords%mat(:,3))
    
    
    ! Test that recomputed coordinates are equal to the original coordinate values
    @assertEqual(pts_init(:)%c1_,pts_test(:)%c1_,tol)
    @assertEqual(pts_init(:)%c2_,pts_test(:)%c2_,tol)
    @assertEqual(pts_init(:)%c3_,pts_test(:)%c3_,tol)
    
    
end subroutine







