@Test
subroutine testPoint_set() 
    use pfunit_mod
    use type_point
    use mod_kinds, only: rk,ik
    
    implicit none
    type(point_t)   :: pnt
    real(rk)        :: x_ref, y_ref, z_ref, tol
    
    tol = 1.e-16_rk
    
    x_ref = 1.5_rk
    y_ref = 2.8_rk
    z_ref = 10.5_rk
    
    call pnt%set(x_ref,y_ref,z_ref)
    
    @assertEqual(x_ref,pnt%c1_)
    @assertEqual(y_ref,pnt%c2_)
    @assertEqual(z_ref,pnt%c3_)
end subroutine